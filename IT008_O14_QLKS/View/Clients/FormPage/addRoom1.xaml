                                    <TranslateTransform X="42.336"/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>
                    </Border>

                    <Border Background="WhITE" Width="30" Height="30" HorizontalAlignment="Center" Margin="8,0,0,0" CornerRadius="2" BorderBrush="Black" BorderThickness="1,1,1,1">
