                                </ComboBoxItem>
                                <ComboBoxItem Style="{DynamicResource cbbitemtxt_style}" Content="repair">

                                </ComboBoxItem>
                            </ComboBox>
                            <TextBox  FontFamily="Times New Roman" FontSize="20" BorderThickness="0,0,0,0" Margin="21,37,20,13" BorderBrush="{x:Null}" Grid.Row="1" Grid.ColumnSpan="2" VerticalContentAlignment="Center"/>
                        </Grid>

                    </Border>

                </Grid>

            </Border>
        </Grid>
    </Grid>
</UserControl>
