                                <ColumnDefinition Width="14*"/>
                            </Grid.ColumnDefinitions>
                            <Border Height="38"  BorderThickness="2" CornerRadius="7" Margin="12,33,11,9" Background="White" BorderBrush="#FF7D7B7B" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2" Grid.Row="1">
                                <TextBlock Text="*Note" FontSize="23
" Foreground="#FF717171" FontFamily="Times New Roman" HorizontalAlignment="Left" Width="487" Margin="-2,-33,0,33"/>





