                        <TextBlock Text="X" Foreground="White" FontSize="25                                                                " FontFamily="Bahnschrift" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                    </Border>
                    <Border  CornerRadius="7" BorderBrush="#7D7B7B" BorderThickness="3" Margin="24,19,23,68">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="44*"/>
                                <RowDefinition Height="81*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
